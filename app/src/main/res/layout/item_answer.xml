<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/border_padding_10">

            <TextView
                android:id="@+id/tv_chapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGreen" />

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_chapter_count"
                android:textColor="@color/colorGreen" />

            <TextView
                android:id="@+id/tv_chapter_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/b3" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/border_padding_5"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_question_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/border_padding_5"
                android:background="@drawable/answer_type_bg"
                android:padding="2dp"
                android:textColor="@color/colorGreen" />

            <TextView
                android:id="@+id/tv_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </FrameLayout>

        <RadioGroup
            android:id="@+id/rg_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/border_padding_10"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_answer_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b1"
                android:button="@null"
                android:drawableLeft="@mipmap/rb_answer_a"
                android:drawablePadding="@dimen/border_padding_5" />

            <RadioButton
                android:id="@+id/rb_answer_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b1"
                android:button="@null"
                android:drawableLeft="@mipmap/rb_answer_b"
                android:drawablePadding="@dimen/border_padding_5" />

            <RadioButton
                android:id="@+id/rb_answer_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b1"
                android:button="@null"
                android:drawableLeft="@mipmap/rb_answer_c"
                android:drawablePadding="@dimen/border_padding_5" />

            <RadioButton
                android:id="@+id/rb_answer_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/b1"
                android:button="@null"
                android:drawableLeft="@mipmap/rb_answer_d"
                android:drawablePadding="@dimen/border_padding_5" />

        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_padding_5"
            android:background="@color/b3" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_answer_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/border_padding_10">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@color/b3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/border_padding_10"
                    android:paddingRight="@dimen/border_padding_10"
                    android:background="@color/b1"
                    android:text="试题详解" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answer_type_bg"
                android:padding="2dp"
                android:textColor="@color/b3"
                android:text="答案" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正确答案 " />
                <TextView
                    android:id="@+id/tv_choice_answer"
                    android:textColor="@color/colorGreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/answer_type_bg"
                android:padding="2dp"
                android:textColor="@color/b3"
                android:text="解析" />

            <TextView
                android:id="@+id/tv_answer_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="content" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>