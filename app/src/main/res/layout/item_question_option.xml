<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_answer_a"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_answer_option"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/colorWhite"
        android:background="@drawable/answer_option_bg"
        android:layout_marginRight="@dimen/border_padding_5"
       />

    <TextView
        android:id="@+id/tv_answer_content"
        android:layout_width="match_parent"
        android:textColor="@color/bg_title"
        android:layout_height="wrap_content"
        android:textSize="18sp" />
</LinearLayout>

